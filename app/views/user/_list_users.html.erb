<div class="list-users">
	<h2><%= title  %></h2>

<% if users.length ==  0%>
	<h3>OOPS! There doesn't seem to be anybody here</h3>	
<% end %>

	<ul>
		<% users.each do |user| %>
			<li> <%= link_to user.name, user_path(user.id) %> - Level <%= user.level %> <span class="mentor"><%=" - mentor" if user.mentor %></span> - <%= user.location  %></li>
		<% end %>
	</ul>
</div>