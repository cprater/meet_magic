<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>

	<div><%= f.label :name %>
  <%= f.text_field :name %></div>

  <div><%= f.label :location %>
    <%= f.text_field :location, placeholder: "" %></div>

  <div class="level-box">

    <%= f.label "Skill Level?" %><br />

    <div class="level"><%= f.radio_button(:level, 1)  %><br />
    <%= f.label(:level_1, '< 6 months') %></div>  

    <div class="level"><%= f.radio_button(:level, 2)  %><br />
    <%= f.label(:level_2, '6 months - 1 year') %></div>  

    <div class="level"><%= f.radio_button(:level, 3)  %><br />
    <%= f.label(:level_3, '> 1 year') %></div>

  </div>

	<div><%= f.check_box(:mentor)  %>
  <%= f.label(:mentor, 'Mentor new players?') %></div>  

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.submit "Sign up", class: "button" %></div><br />

	<%= render "devise/shared/links" %>
<% end %>

<body onload="initializeAutoComplete()">
